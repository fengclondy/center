<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>promotioncenter</artifactId>
		<groupId>cn.htd.promotion.cpc</groupId>
		<version>1.1.0-RELEASE</version>
	</parent>
	<groupId>cn.htd.promotion.cpc</groupId>
	<artifactId>promotioncenter-api</artifactId>
	<version>1.1.0-RELEASE</version>
	<name>promotioncenter-api</name>
	<url>http://maven.apache.org</url>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<promotioncenter-common.version>1.1.0-RELEASE</promotioncenter-common.version>
	</properties>
	<dependencies>
		<dependency>
			<groupId>cn.htd.promotion.cpc</groupId>
			<artifactId>promotioncenter-common</artifactId>
			<version>${promotioncenter-common.version}</version>
		</dependency>
		 <dependency>
		 	<groupId>cn.htd.promotion.cpc</groupId>
			<artifactId>promotioncenter-biz</artifactId>
			<version>1.1.0-RELEASE</version>
		 </dependency>
		 
	</dependencies>
	
	<build>
	 <plugins>
		<plugin>
	    <groupId>org.apache.maven.plugins</groupId>
	    <artifactId>maven-jar-plugin</artifactId>
	    <version>2.3</version>
	    <executions>
	        <execution>
	            <id>cn.htd.promotion.cpc</id>
	            <phase>package</phase>
	            <goals>
	               <goal>jar</goal>
	            </goals>
	            <configuration>
	               <classifier>remote</classifier>
	               <jarName>promotioncenter-remote-api</jarName>
	               <includes>
	                 <include>cn/htd/promotion/cpc/api/*</include>
	               </includes>
	            </configuration>
	        </execution>
	    </executions>
	  </plugin>
	</plugins>
	</build>

</project>
