  <select id="queryWinningRecord" resultMap="BaseResultMap"
          parameterType="cn.htd.promotion.cpc.dto.request.WinningRecordReqDTO">
    select
    <include refid="Base_Column_List"/>
    from buyer_winning_record
    where 1 = 1
    and buyer_code = #{buyerCode}
    and reward_type != 5
