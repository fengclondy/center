			</if>
			<if test="bargainAmount != null">
				bargain_amount,
			</if>
			<if test="bargainTime != null">
				bargain_time,
			</if>
			<if test="createId != null">
				create_id,
			</if>
			<if test="createName != null">
				create_name,
			</if>
			<if test="createTime != null">
